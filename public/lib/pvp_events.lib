function pvp_events_get($ref=false, $add='') {
    global $db_2;
    return common_get($db_2,TABLE_PVP_EVENTS,$ref,$add);
}

function pvp_events_list($ref=false, $add='') {
    global $db_2;
    return common_list($db_2,TABLE_PVP_EVENTS,$ref,$add);
}

function pvp_events_count($ref=false, $add='') {
    global $db_2;
    return common_count($db_2, TABLE_PVP_EVENTS, $ref, $add);
}

function pvp_events_save($param) {
    global $db_2;
    return common_save($db_2,TABLE_PVP_EVENTS,$param,FIELD_PVP_EVENTS);
}

function pvp_events_delete($ref) {
    global $db_2;
    if (!$ref || is_array($ref)) return false;
    common_delete($db_2,TABLE_PVP_EVENTS,$ref);
    return true;
}