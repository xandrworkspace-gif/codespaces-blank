		$obj_id = is_array($channel_data) && $channel_data['area_id'] ? $channel_data['area_id']: $channel_data;
		if ($obj_id) {
			$list = array();
			chat_getMsgList(new Area($obj_id), $list, $msg_id);
			$msg_list = array_merge($msg_list,$list);
		}
	}
	if ($channel & CHAT_CHF_USER) {
