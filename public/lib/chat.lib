    foreach ($channel_avail as $channel_id=>$channel){
        if($chat_settings['channel_data'][$channel_id]['channels']){
            $out[$channel_id][$channel_id] = $channel_id;
            foreach ($chat_settings['channel_data'][$channel_id]['channels'] as $_ch){
