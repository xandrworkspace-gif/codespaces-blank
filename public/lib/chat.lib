	if ($channel & CHAT_CHF_TRADE) {
		$obj_id = is_array($channel_data) && $channel_data['trade_id'] ? $channel_data['trade_id']: $channel_data;
		if ($obj_id) {
			$list = array();
			chat_getMsgList(new Trade($obj_id), $list, $msg_id);
